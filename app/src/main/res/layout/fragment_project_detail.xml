<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIndicator"
    android:orientation="vertical"
    tools:context=".ui.home.detail_project.ProjectDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_load"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_focus_load"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/image_load"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_load"
            app:layout_constraintTop_toTopOf="@id/image_load">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_loadMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monthly_demand"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="kWh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_loadMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_loadDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/daily_demand"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="kWh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_loadDaily"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_panels"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_panels"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/img_panels"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_panels"
            app:layout_constraintTop_toTopOf="@id/img_panels">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_modulePower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/module_power"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="W">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_modulePower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_moduleVoltage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/open_circuit_voltage"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="V">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_moduleVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_moduleCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/short_circuit_current"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="A">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_moduleCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_moduleQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:hint="@string/number_of_modules"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="@string/units">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_moduleQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_systemSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:hint="@string/dc_system_size"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="kW">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_systemSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_inverter"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_inverter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@+id/img_inverter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_inverter"
            app:layout_constraintTop_toTopOf="@+id/img_inverter">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_inverterEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inverter_efficiency"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="%">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_inverterEfficiency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_inverterOf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/a_inverter_of"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="kW">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_inverterOf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_controllerOf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/a_controller_of"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="V">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_controllerOf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_batterySpecifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_batteries"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_batteries"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/img_batteries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_batteries"
            app:layout_constraintTop_toTopOf="@+id/img_batteries">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_daysAutonomy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/days_of_autonomy"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="días">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_daysAutonomy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_batteryDischarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/depth_of_discharge"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="%">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_batteryDischarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_batteryCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/battery_capacity"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="Ah">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_batteryCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_batteryVoltage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/battery_voltage"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="V">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_batteryVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_batteryQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:hint="@string/number_of_batteries"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="@string/units">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_batteryQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_description"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/img_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_description"
            app:layout_constraintTop_toTopOf="@+id/img_description">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ambient_temperature"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="°C">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_sunHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/peak_sun_hours"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:suffixText="h">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_sunHours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/location"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>